
.gra-item{
    display: flex;
    border-bottom: 10rpx solid #f2f2f2;
}

.gra-img,.gra-img image{
    width: 200rpx;
    height: 200rpx;
}

.gra-text{
    height: 200rpx;
    display: flex;
    flex-direction: column;
    margin-left: 15rpx;
    padding-left: 20rpx;
}

.gra-year{
    margin-top: 20rpx;
    font-size: 16px;
    color: #ff6600;
    font-weight: bold;
}

.gra-deta{
    margin-top: 20rpx;
    font-size: 14px;
    color: #ccc;
}