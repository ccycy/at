page{
    background-color: #f1f1f1;
}

/*
* 轮播图
*/
swiper{
    margin: 0 30rpx;
    height: 400rpx;
}
swiper-item,swiper-item image{
    width: 100%;
    height: 400rpx;
}

/*
*  科目选择
*/
.sub{
    background-color: white;
    display: flex;
    flex-direction: column;
    margin: 50rpx 30rpx;
    border-radius: 10rpx;
    padding: 20rpx;
}

.sub-name{
    border-bottom: 1rpx solid #cccccc;
    font-size: 16px;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.sub-img{
    border-bottom: 1rpx solid #cccccc;
    height: 300rpx;
    width: 100%;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.sub-edi{
    font-size: 14px;
    color: #cccccc;
}

